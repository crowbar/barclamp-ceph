{
  "id": "bc-template-ceph",
  "description": "Installation for Ceph <span style='color: red;'>(As of SUSE Cloud 1.0 Ceph is not officially supported but rather included as a technical preview, so using Nova Volume instead is recommended)</span>",
  "attributes": {
    "ceph": {
      "devices": [],
      "clustername" : "ceph"
    }
  },
  "deployment": {
    "ceph": {
      "crowbar-revision": 0,
      "element_states": {
        "ceph-mon-master": [ "readying", "ready", "applying" ],
        "ceph-mon": [ "readying", "ready", "applying" ],
        "ceph-store": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "ceph-mon-master" ],
        [ "ceph-mon" ],
        [ "ceph-store" ]
      ],
      "element_run_list_order": {
        "ceph-mon-master": 80,
        "ceph-mon": 81,
        "ceph-store": 82
      },
      "config": {
        "environment": "ceph-base-config",
        "mode": "full",
        "transitions": false,
        "transition_list": [
        ]
      }
    }
  }
}
